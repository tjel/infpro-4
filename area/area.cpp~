# include <iostream>

using namespace std;

int main( ) 
{ 
    float PI = 3,14159;                // variables can be initialized during declaration 
    int rad; 
    int area;
    cout<< "Enter the radius"; 
    cin>>rad;
	area=PI * rad * rad;

    cout<< "Area of the circle = "<<area;
    cout<<endl;
	 
    return 0;
}  
